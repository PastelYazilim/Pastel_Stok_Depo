<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="beforeDescendants"
              android:focusableInTouchMode="true"

              android:orientation="vertical"
              tools:context=".UIActivity.LoginActivity">

    <!-- Login progress -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_yeni_stil"
            android:gravity="center"
            android:onClick="onBtnTemizle"
            android:text="Temizle"
            android:textColor="@color/beyaz"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button26"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_yeni_stil_kirmizi_lacivert_cerceve"
            android:gravity="center"
            android:onClick="onBtnAra"
            android:text="Ara"
            android:textColor="@color/beyaz"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_yeni_stil_kirmizi_lacivert_cerceve"
            android:foregroundGravity="center"
            android:gravity="center"
            android:onClick="tara"
            android:text="BARKOD"
            android:textColor="@color/beyaz"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_btn_ayarlar"
        android:clickable="true"
        android:focusable="true"
        android:onClick="ayarlar"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button24"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Depo"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <Spinner
                android:id="@+id/spin_depolar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Barkod"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_barkod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:imeActionLabel="Stok Ara"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Stok Kodu"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_stokKodu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Stok Adı"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_stokAdi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="true"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Prg. Bakiyesi"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_prgBakiye"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Sayım Bakiyesi"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_sayBakiye"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/button_yeni_stil_kirmizi"
                android:gravity="center"
                android:onClick="onBtnGuncelle"
                android:text="GÜNCELLE"
                android:textColor="@color/beyaz"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left|center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1.S. Fiyatı"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_fiyatS1"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="left|right|center_vertical"
                android:text="Alış Fiyatı KDV'siz"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:id="@+id/edt_alisKDVsiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="6"
                android:enabled="false"
                android:foregroundGravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="2.S. Fiyatı"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_fiyatS2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:gravity="left|right|center_vertical"
                android:text="Alış Fiyatı KDV'li"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:id="@+id/edt_alisKDVli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:enabled="false"
                android:foregroundGravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="3.S. Fiyatı"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_fiyatS3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="4.S. Fiyatı"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_fiyatS4"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="5.S. Fiyatı"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@android:color/holo_red_dark"/>

            <EditText
                android:id="@+id/edt_fiyatS5"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:layout_weight="50"
                android:background="@drawable/button_yeni_stil"
                android:gravity="center"
                android:onClick="etiketYazdir"
                android:padding="2dp"
                android:text="Etiket Yazdır"
                android:textColor="@color/beyaz"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button14"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:layout_weight="50"
                android:background="@drawable/button_yeni_stil"
                android:gravity="center"
                android:onClick="kapat"
                android:padding="2dp"
                android:text="ÇIKIŞ"
                android:textColor="@color/beyaz"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
