<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="fill"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10dp"
              tools:context=".UIActivity.ConnectDialogActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_above="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo_yeni"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/siyah"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edtDatabaseFilePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Veritabanı Yolu"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/str_kullaniciGirisi"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:text="C:/Pastel Yazılım/S01/2017.FDB"
                android:textAlignment="textStart"/>

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/edtHost2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:hint="Sunucu IP Adres"
            android:inputType="phone"
            android:padding="10dp"
            android:text="192.168.1.100"
            android:textColor="@color/textView_yazi_rengi"
            android:textSize="15dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kullanıcı Adı"
            android:inputType=""
            android:textColor="@color/textView_yazi_rengi"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parola"
            android:inputType="textPassword"
            android:textColor="@color/textView_yazi_rengi"
            android:visibility="gone">

            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/edtPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:hint="Port"
            android:inputType="phone"
            android:padding="10dp"
            android:text="3050"
            android:textColor="@color/textView_yazi_rengi"
            android:textSize="15dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edtDatabaseFilePath2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:hint="Örnek  C:/Veritabani.fdb"
            android:inputType=""
            android:padding="10dp"
            android:text="C:/Pastel Yazılım/S01/2017.FDB"
            android:textColor="@color/textView_yazi_rengi"
            android:textSize="15dp"
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/edtHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sunucu IP Adres"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/str_kullaniciGirisi"
                android:imeOptions="flagNoExtractUi"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:text="192.168.1.100"
                android:textAlignment="textStart"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/denemeYap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_red_style"
            android:onClick="btn_deneme_yap"
            android:padding="5dip"
            android:text="Deneme Yap"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnConnectTest"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/btnCancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnCancel"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:layout_weight="6"
            android:background="@drawable/button_yeni_stil"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="btn_test_et"
            android:text="Bağlantı Test"
            android:textColor="@color/beyaz"
            />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_above="@+id/button13"
            android:layout_alignLeft="@+id/button13"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/button13"
            android:layout_gravity="center"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_weight="4"
            android:background="@drawable/button_yeni_stil"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="guncelleme"
            android:text="Devam"
            android:textColor="@color/beyaz"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_yeni_stil"
        android:gravity="center"
        android:onClick="btn_finish"
        android:text="Çıkış"
        android:textColor="@color/beyaz"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/linearLayout5"
        android:layout_alignStart="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginTop="34dp"
        android:background="@color/çizgi_turuncu"/>

</LinearLayout>